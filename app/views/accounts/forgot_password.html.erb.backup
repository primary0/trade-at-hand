<% content_for :title, "Forgot Password" %>

<div id="main">
	<div class="form">
		
		<h2>Account Activation</h2>
		
		<% form_tag send_password_reset_instructions_account_path do %>
		
		<fieldset style="border:none">
			
				<div class="left">
					<label>Phone number</label>
				</div>
				<div class="right">
					<%= text_field_tag :phone, {}, :class => "input", :size => "30" %>
					<div class="instructions">The phone number you used in your registration.</div>						
				</div>
				<div class="clear"></div>
				
				<div class="left">
				</div>
				<div class="right">
					<%= submit_tag 'Send Instructions' %>
				</div>
				<div class="clear"></div>
				
		</fieldset>
		<% end %>
		<!--end form-->	
		
	</div>
</div><!--end main-->


