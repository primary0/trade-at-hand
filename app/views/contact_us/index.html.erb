<% content_for :title, "Contact Us" %>

<div id="main">
	<div class="form">		
		<h2>Contact Us</h2>			
		<p>If you have any questions or comments about the service, please contact us via this form. We will get back to you as soon as possible after evaluating your request.</p>
		<% form_tag ({:controller => 'contact_us', :action => 'create'}, :id => "form") do %>

			<fieldset style="border:none">
				
					<div class="left">
						<label>Email Address</label>
					</div>
					<div class="right">
						<%= text_field_tag :email, {}, :class => "input", :size => 40 %>	
						<div class="instructions">Your Email Address.</div>						
					</div>
					<div class="clear"></div>
					
					<div class="left">
						<label>Full Name</label>
					</div>
					<div class="right">
						<%= text_field_tag :name, {}, :class => "input", :size => 40 %>	
						<div class="instructions">Your Full Name.</div>						
					</div>
					<div class="clear"></div>
					
					<div class="left">
						<label>Phone Number</label>
					</div>
					<div class="right">
						<%= text_field_tag :phone, {}, :class => "input", :size => 40 %>	
						<div class="instructions">Your Phone Number.</div>						
					</div>
					<div class="clear"></div>					
					
					<div class="left">
						<label>Message</label>
					</div>
					<div class="right">
						<%= text_area_tag :message, {}, :class => "textarea", :cols => 44, :rows => 20 %>	
						<div class="instructions">Enter your message.</div>						
					</div>
					<div class="clear"></div>					

					<div class="left">
					</div>
					<div class="right">
						<%= submit_tag "Submit" %>
					</div>
					<div class="clear"></div>					
			</fieldset>
	
		<% end %>

	</div><!--end article-->
</div><!--end main-->