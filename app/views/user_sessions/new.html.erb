<% content_for :title, "Login" %>

<div id="main">
	<div class="form">
		
		<h2>User Login</h2>
		
		<% unless current_user %>
			<% form_for @user_session, :url => user_session_path, :html => {:id => "form"} do |f| %>
			
			<%= error_messages_for 'user_session', :header_message => "You have some errors in your login form.", :message => "Please review the following:" %>
			<fieldset style="border:none">
				
					<div class="left">
						<label>Phone (+960)</label>
					</div>
					<div class="right">
						<%= f.text_field :phone, :class => "input" %>	
						<div class="instructions">The phone number you used during your registration.</div>						
					</div>
					<div class="clear"></div>
					
					<div class="left">
						<label>Password</label>
					</div>
					<div class="right">
						<%= f.password_field :password, :class => "input" %>
						<div class="instructions">The password you set in profile or received during registration.</div>																			
					</div>
					<div class="clear"></div>
					
					<div class="left">
					</div>
					<div class="right">
							<%= f.check_box :remember_me, :class => "checkbox" %>
							Remember me on this PC
						<div class="instructions">Ignore this box (leave not checked) if you are using a public computer.</div>						
												
					</div>
					<div class="clear"></div>
					
					<div class="left">
					</div>
					<div class="right">
						<%= f.submit "Login" %>
					</div>
					<div class="clear"></div>					

					
			</fieldset>
			<% end %>
		<% end %>
		<!--end form-->	
		
	</div>
</div><!--end main-->


