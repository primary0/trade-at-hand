<% content_for :title do %>		
	<h2><%= @measuring_system.name %></h2>
	<p id="page-intro">Measuring system and unit information.</p>
	<div class="clear"></div>
<% end %>

<div class="content-box column-left">
	<div class="content-box-header">
		<h3><%= @measuring_system.name %></h3>
		<div class="clear"></div>		
	</div>
	
	<div class="content-box-content">
		<%= simple_format(@measuring_system.description) %>
	</div>
</div>

<div class="content-box column-right">
	<div class="content-box-header">
		<h3>Controls</h3>
	</div>
	
	<div class="content-box-content">
		<p>
			<img src="/images/admin/icons/arrow-180.png" /> <%= link_to 'Back to List', admin_measuring_systems_path %><br />
			<img src="/images/admin/icons/pencil.png" /> <%= link_to 'Edit', edit_admin_measuring_system_path(@measuring_system) %><br />
			<% if @measuring_system.products.empty? && @measuring_system.listings.empty? %>
				<img src="/images/admin/icons/cross.png" /> <%= link_to 'Remove', admin_measuring_system_path(@measuring_system), :method => :delete, :confirm => 'Are you sure you want to delete this measuring system?' %><br />
			<% end %>
		</p>
	</div>
	
</div>
<div class="clear"></div>