<% content_for :title do %>		
	<h2>Users</h2>
	<p id="page-intro">Inactive Users</p>
	<div class="clear"></div>
<% end %>


<div class="content-box">

	<div class="content-box-header">
		<h3>Users Pending Activation</h3>
		<div class="clear"></div>
	</div>
		
	<div class="content-box-content">
		<% unless @users.empty? %>
			<table class="sortable_table">
				<thead>
					<tr>
						<th>Full name</th>
						<th>Email address</th>
						<th>Phone</th>
					</tr>
				</thead>
			
				<tbody>
					<% @users.each do |user| %>
					<tr>
						<td><%= link_to user.full_name, admin_user_path(user) %></td>
						<td><%= user.email %></td>
						<td><%= user.phone %></td>
						<td>
							<%= link_to image_tag('/images/admin/icons/information.png'), admin_user_path(user) %>	
						</td>
					</tr>				
					<% end %>
				</tbody>		
			</table>
		<% end %>
	</div>
</div>
