<% content_for :title do %>		
	<h2><%= @listing.listing_type.name %></h2>
	<p id="page-intro">Listing information.</p>
	<div class="clear"></div>
<% end %>

<div class="content-box column-left">
	<div class="content-box-header">
		<h3><%= @listing.product.product_category.name %> | <%= @listing.product.name %></h3>
		<div class="clear"></div>		
	</div>
	
	<div class="content-box-content">
		<div class="listing-box">
			<table><tbody>
				<tr>
					<th align="right">User</th>
					<td align="left"><%= link_to @listing.user.full_name, admin_user_path(@listing.user) %></td>
				</tr>
				<tr>
					<th>Posted on</th>
					<td><%= @listing.created_at.to_date.to_s(:long) %></td>
				</tr>
				<tr>
					<th>Status</th>
					<td>
						<% if @listing.sold %>
							SOLD
						<% else %>
							Not marked as sold
						<% end %>
					</td>
				</tr>
				<tr>
					<th>Ends on</th>
					<td><%= @listing.expiry_date.to_date.to_s(:long) %> : <%= @listing.ends_in %> day(s) left (<%= @listing.expired %>) </td>
				</tr>			
				<tr>
					<th>Quantity</th>
					<td><%= @listing.real_quantity %></td>
				</tr>
				<tr>
					<th>Price</th>
					<td><%= @listing.rate %></td>
				</tr>
				<tr>
					<th>Total worth</th>
					<td><%= number_to_currency(@listing.worth, :precision => 2, :unit => "MVR ", :delimiter => ",") %></td>
				</tr>				
				<tr>
					<th>Location</th>
					<td><%= @listing.location %></td>
				</tr>
				<tr>
					<th>Description</th>
					<td><%= simple_format(@listing.description) %></td>
				</tr>	
			</tbody></table>
		</div>		
		<div class="clear"></div>
	</div>
</div>

<div class="content-box column-right">
	<div class="content-box-header">
		<h3>Controls</h3>
	</div>
	
	<div class="content-box-content">
		<p>
			<img src="/images/admin/icons/arrow-180.png" /> <a href="javascript:history.back()">Back</a><br />
			<img src="/images/admin/icons/pencil.png" /> <%= link_to 'Edit', edit_admin_listing_path(@listing) %><br />
			<img src="/images/admin/icons/cross.png" /> <%= link_to 'Remove', admin_listing_path(@listing), :method => :delete, :confirm => 'Are you sure you want to delete this item?' %><br />
		</p>
	</div>
	
</div>
<div class="clear"></div>