<% content_for :title do %>		
	<h2>Edit Article Section</h2>
	<p id="page-intro">Edit static content article sections.</p>
	<div class="clear"></div>
<% end %>


<div class="content-box">
	
	<div class="content-box-header">
		<h3>Article Section Form</h3>
		<div class="clear"></div>
	</div>
	<div class="content-box-content">
		<% form_for ([:admin, @article]), :html => {:id => 'validatedForm'} do |f|  %>
			<fieldset>
				<p>
					<%= f.label :title %>
			    <%= f.text_field :title, :class => 'validate[required,custom[onlyLetter]] text-input medium-input' %>					
				</p>
				<p>
					<%= f.label :description %>
			    <%= f.text_area :description, :class => 'validate[required] text-input textarea', :rows => 15 %>					
				</p>
				<%= f.hidden_field :article_category_id %>
				<p>
				  <%= f.submit "Submit", :class => 'button' %> | <a href="javascript:history.back()">Back</a>
				</p>
			</fieldset>
			<div class="clear"></div>
		<% end %>
	</div>
</div>