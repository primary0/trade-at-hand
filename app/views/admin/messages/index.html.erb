<% content_for :title do %>		
	<h2>Messages</h2>
	<p id="page-intro">SMS log.</p>
	<div class="clear"></div>
<% end %>


<div class="content-box">
	
	<div class="content-box-header">
		<h3>Messages</h3>
		<div class="clear"></div>
	</div>
	
	<div class="content-box-content">
		
		<% unless @messages.empty? %>
			<table class="sortable_table">
				<thead>
					<tr>
						<th>Phone </th>
						<th>Message</th>
						<th>Date</th>
					</tr>
				</thead>
			
				<tbody>
					<% @messages.each do |message| %>
					<tr>
						<td><%= message.msisdn %></td>
						<td><%= message.message %></td>
						<td><%= message.created_at %></td>
						<td>
							<%= link_to image_tag('/images/admin/icons/information.png'), admin_message_path(message) %>	
						</td>
					</tr>				
					<% end %>		
				</tbody>
				
				<tfoot>
					<tr>
						<td colspan="6">
							<%= will_paginate @messages %>
							<div class="clear"></div>
						</td>
					</tr>
				</tfoot>
			</table>
		<% end %>			
	</div>
</div>
